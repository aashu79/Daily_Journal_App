@inherits LayoutComponentBase

<!-- Root wrapper -->
<div class="dailyscript-layout">

    <!-- Sidebar -->
    <nav class="ds-sidebar">
        <div class="ds-sidebar-header">
            <div class="ds-logo">DailyScript</div>
        </div>
        <div class="ds-nav">
            <a class="ds-nav-link" href="/dashboard">
                <span class="ds-nav-icon">📊</span> Dashboard
            </a>
            <a class="ds-nav-link" href="/write">
                <span class="ds-nav-icon">✍️</span> Write Entry
            </a>
            <a class="ds-nav-link active" href="/entries">
                <span class="ds-nav-icon">📚</span> All Entries
            </a>
        </div>
        <div class="ds-sidebar-footer">
            <a class="ds-nav-link" href="/settings">
                <span class="ds-nav-icon">⚙️</span> Settings
            </a>
        </div>
    </nav>

    <!-- Main Content Area -->
    <div class="ds-main">
        <!-- Optional Topbar (matches screenshot, but no navbar) -->
        <header class="ds-topbar">
            <div class="ds-topbar-left">
                <span>@("All Entries")</span>
            </div>
            <div class="ds-topbar-right">
                <!-- Future: User info, date, etc -->
            </div>
        </header>
        <main class="ds-content">
            <div class="container-fluid py-3">
                @Body
            </div>
        </main>
    </div>
</div>