@page "/tags"
@using Daily_Journal_App.Models
@using Daily_Journal_App.Services
@inject TagService TagService
@inject IJSRuntime JS

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4">Tags</h1>
        <button class="btn btn-primary" @onclick="CreateNew">+ New Tag</button>
    </div>

    <div class="row">
        <div class="col-md-7 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">All Tags</h5>

                    <div class="mb-2 d-flex gap-2">
                        <input class="form-control form-control-sm" placeholder="Search tags..." @bind="search" />
                    </div>

                    <div class="table-responsive">
                        <table class="table table-sm table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width:60px">Id</th>
                                    <th>Name</th>
                                    <th style="width:140px">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var t in FilteredTags)
                                {
                                    <tr>
                                        <td>@t.Id</td>
                                        <td>@t.Name</td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-secondary me-1" @onclick="() => Edit(t.Id)">Edit</button>
                                            <button class="btn btn-sm btn-outline-danger" @onclick="() => ConfirmDelete(t.Id)">Delete</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>

        <div class="col-md-5 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@((editingTag.Id == 0) ? "Create Tag" : "Edit Tag")</h5>

                    @if (!string.IsNullOrEmpty(message))
                    {
                        <div class="alert @messageClass">@message</div>
                    }

                    <div class="mb-2">
                        <label class="form-label">Name</label>
                        <input class="form-control" @bind="editingTag.Name" />
                    </div>

                    <div class="d-flex gap-2 justify-content-end">
                        <button class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                        <button class="btn btn-success" @onclick="Save">Save</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<Tag> tags = new();
    private Tag editingTag = new Tag();
    private string search = string.Empty;
    private string message = string.Empty;
    private string messageClass = "alert-success";

    protected override async Task OnInitializedAsync()
    {
        await Load();
    }

    private async Task Load()
    {
        tags = await TagService.GetAllTagsAsync();
    }

    private IEnumerable<Tag> FilteredTags
    {
        get
        {
            var list = tags.AsEnumerable();
            if (!string.IsNullOrWhiteSpace(search))
            {
                var q = search.Trim();
                list = list.Where(t => t.Name.Contains(q, StringComparison.OrdinalIgnoreCase));
            }
            return list.OrderBy(t => t.Name);
        }
    }

    private void CreateNew()
    {
        editingTag = new Tag();
        message = string.Empty;
    }

    private async Task Edit(int id)
    {
        var t = await TagService.GetTagByIdAsync(id);
        if (t != null) editingTag = new Tag { Id = t.Id, Name = t.Name };
    }

    private async Task Save()
    {
        message = string.Empty;
        if (string.IsNullOrWhiteSpace(editingTag.Name))
        {
            message = "Name is required.";
            messageClass = "alert-danger";
            return;
        }

        await TagService.SaveTagAsync(editingTag);
        await Load();
        message = "Tag saved.";
        messageClass = "alert-success";
        editingTag = new Tag();
    }

    private void Cancel()
    {
        editingTag = new Tag();
        message = string.Empty;
    }

    private async Task ConfirmDelete(int id)
    {
        var confirmed = await JS.InvokeAsync<bool>("confirm", "Delete this tag? This action cannot be undone.");
        if (!confirmed) return;
        await TagService.DeleteTagAsync(id);
        await Load();
    }
}
