@page "/entries"
@using Daily_Journal_App.Services
@using Daily_Journal_App.Models
@inject JournalService JournalService
@inject NavigationManager Navigation
@inject IJSRuntime JS

<div class="all-entries-layout">
    <div class="entries-header-row">
        <h1>All Journal Entries</h1>
        <span class="entries-count">@filteredEntries.Count entries</span>
    </div>
    
    <div class="entries-toolbar">
        <input class="entries-search" 
               placeholder="🔍 Search entries..." 
               value="@searchQuery"
               @oninput="OnSearchInput" />
        
        <select class="entries-filter" value="@moodFilter" @onchange="OnMoodFilterChange">
            <option value="">All Moods</option>
            <option value="Happy">Happy</option>
            <option value="Sad">Sad</option>
            <option value="Calm">Calm</option>
            <option value="Excited">Excited</option>
            <option value="Anxious">Anxious</option>
            <option value="Grateful">Grateful</option>
            <option value="Confident">Confident</option>
            <option value="Relaxed">Relaxed</option>
            <option value="Thoughtful">Thoughtful</option>
            <option value="Curious">Curious</option>
            <option value="Nostalgic">Nostalgic</option>
            <option value="Bored">Bored</option>
            <option value="Angry">Angry</option>
            <option value="Stressed">Stressed</option>
            <option value="Lonely">Lonely</option>
            <option value="Tired">Tired</option>
        </select>
        
        <select class="entries-sort" value="@sortOrder" @onchange="OnSortOrderChange">
            <option value="newest">Sort: Newest First ▼</option>
            <option value="oldest">Sort: Oldest First ▲</option>
            <option value="title">Sort: Title (A-Z)</option>
        </select>
        
        <button class="entries-newentry" @onclick="GoToWrite">+ New Entry</button>
    </div>

    @if (isLoading)
    {
        <div class="loading-message">Loading entries...</div>
    }
    else if (!filteredEntries.Any())
    {
        <div class="empty-state">
            <p>No entries found.</p>
            <button class="entries-newentry" @onclick="GoToWrite">Create Your First Entry</button>
        </div>
    }
    else
    {
        <div class="entries-list">
            @foreach (var entry in GetPagedEntries())
            {
                <div class="entry-card">
                    <div class="entry-card-header" @onclick="@(() => ViewEntry(entry.Id))">
                        <span class="entry-card-date">@entry.Date.ToString("MMMM dd, yyyy")</span>
                        <span class="entry-card-wordcount">@GetWordCount(entry.Content) words</span>
                    </div>
                    <div class="entry-card-title @(GetMoodColor(entry.PrimaryMood))" @onclick="@(() => ViewEntry(entry.Id))">@entry.Title</div>
                    <div class="entry-card-tags" @onclick="@(() => ViewEntry(entry.Id))">
                        @GetMoodEmoji(entry.PrimaryMood) @entry.PrimaryMood 
                        @if (!string.IsNullOrWhiteSpace(entry.Tags))
                        {
                            <span>• @entry.Tags.Replace(",", " • ")</span>
                        }
                    </div>
                    @if (!string.IsNullOrWhiteSpace(entry.Content))
                    {
                        <div class="entry-card-desc" @onclick="@(() => ViewEntry(entry.Id))">@GetPreview(entry.Content)</div>
                    }

                    <div class="entry-card-actions">
                        <button class="edit-btn" @onclick="@(() => EditEntry(entry.Id))">Edit</button>
                        <button class="delete-btn" @onclick="@(() => DeleteEntry(entry))">Delete</button>
                    </div>
                </div>
            }
        </div>

        @if (totalPages > 1)
        {
            <div class="entries-pagination">
                @if (currentPage > 1)
                {
                    <button class="pagination-btn" @onclick="@(() => ChangePage(currentPage - 1))">« Previous</button>
                }
                
                @for (int i = 1; i <= totalPages; i++)
                {
                    var pageNumber = i;
                    <button class="pagination-btn @(currentPage == pageNumber ? "active" : "")" 
                            @onclick="@(() => ChangePage(pageNumber))">@pageNumber</button>
                }
                
                @if (currentPage < totalPages)
                {
                    <button class="pagination-btn" @onclick="@(() => ChangePage(currentPage + 1))">Next »</button>
                }
            </div>
        }
    }
</div>

@code {
    private List<JournalEntry> allEntries = new();
    private List<JournalEntry> filteredEntries = new();
    private string searchQuery = "";
    private string moodFilter = "";
    private string sortOrder = "newest";
    private bool isLoading = true;
    private string feedbackMessage = "";

    private int currentPage = 1;
    private int pageSize = 10;
    private int totalPages => (int)Math.Ceiling(filteredEntries.Count / (double)pageSize);

    protected override async Task OnInitializedAsync()
    {
        await LoadEntries();
    }

    private async Task LoadEntries()
    {
        try
        {
            isLoading = true;
            allEntries = await JournalService.GetEntriesAsync();
            ApplyFilters();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading entries: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void OnSearchInput(ChangeEventArgs e)
    {
        searchQuery = e.Value?.ToString() ?? "";
        ApplyFilters();
    }

    private void OnMoodFilterChange(ChangeEventArgs e)
    {
        moodFilter = e.Value?.ToString() ?? "";
        ApplyFilters();
    }

    private void OnSortOrderChange(ChangeEventArgs e)
    {
        sortOrder = e.Value?.ToString() ?? "";
        ApplyFilters();
    }

    private void ApplyFilters()
    {
        filteredEntries = allEntries.ToList();

        if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            var query = searchQuery.ToLower();
            filteredEntries = filteredEntries.Where(e =>
                e.Title.ToLower().Contains(query) ||
                e.Content.ToLower().Contains(query) ||
                e.Tags.ToLower().Contains(query) ||
                e.PrimaryMood.ToLower().Contains(query)
            ).ToList();
        }

        if (!string.IsNullOrWhiteSpace(moodFilter))
        {
            filteredEntries = filteredEntries.Where(e =>
                e.PrimaryMood.Equals(moodFilter, StringComparison.OrdinalIgnoreCase) ||
                e.SecondaryMoods.Contains(moodFilter, StringComparison.OrdinalIgnoreCase)
            ).ToList();
        }

        filteredEntries = sortOrder switch
        {
            "oldest" => filteredEntries.OrderBy(e => e.Date).ThenBy(e => e.CreatedAt).ToList(),
            "title" => filteredEntries.OrderBy(e => e.Title).ToList(),
            _ => filteredEntries.OrderByDescending(e => e.Date).ThenByDescending(e => e.CreatedAt).ToList()
        };

        currentPage = 1;
    }

    private List<JournalEntry> GetPagedEntries()
    {
        return filteredEntries
            .Skip((currentPage - 1) * pageSize)
            .Take(pageSize)
            .ToList();
    }

    private void ChangePage(int page)
    {
        if (page >= 1 && page <= totalPages)
        {
            currentPage = page;
        }
    }

    private void ViewEntry(int id)
    {
        Navigation.NavigateTo($"/journal/{id}");
    }

    private void GoToWrite()
    {
        Navigation.NavigateTo("/write");
    }

    private int GetWordCount(string content)
    {
        if (string.IsNullOrWhiteSpace(content))
            return 0;
        
        var text = System.Text.RegularExpressions.Regex.Replace(content, "<.*?>", " ");
        return text.Split(new[] { ' ', '\n', '\r', '\t' }, StringSplitOptions.RemoveEmptyEntries).Length;
    }

    private string GetPreview(string content, int maxLength = 150)
    {
        if (string.IsNullOrWhiteSpace(content))
            return "";
        
        var text = System.Text.RegularExpressions.Regex.Replace(content, "<.*?>", " ");
        text = text.Trim();
        
        if (text.Length <= maxLength)
            return text;
        
        return text.Substring(0, maxLength) + "...";
    }

    private string GetMoodEmoji(string mood)
    {
        return mood switch
        {
            "Happy" => "😊",
            "Sad" => "😢",
            "Calm" => "🧘",
            "Excited" => "🎉",
            "Anxious" => "😰",
            "Grateful" => "🙏",
            "Tired" => "😴",
            "Angry" => "😠",
            "Stressed" => "😟",
            "Confident" => "💪",
            "Relaxed" => "😌",
            "Thoughtful" => "🤔",
            "Curious" => "🧐",
            "Nostalgic" => "💭",
            "Bored" => "😑",
            "Lonely" => "😔",
            _ => "📝"
        };
    }

    private string GetMoodColor(string mood)
    {
        var negative = new[] { "Sad", "Angry", "Stressed", "Lonely", "Anxious" };
        return negative.Contains(mood) ? "entry-card-title-red" : "";
    }

    private async Task EditEntry(int id)
    {
        Navigation.NavigateTo($"/journal/{id}");
    }

    private async Task DeleteEntry(JournalEntry entry)
    {
        try
        {
            var confirmed = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this entry?");
            if (!confirmed) return;

            var result = await JournalService.DeleteEntryAsync(entry);
            if (result > 0)
            {
                allEntries.RemoveAll(e => e.Id == entry.Id);
                ApplyFilters();
            }
            else
            {
                Console.WriteLine("Failed to delete entry");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting entry: {ex.Message}");
        }
    }
}